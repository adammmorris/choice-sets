clearvars

%% Basics
nAgents = 500;
nWords = 14;
nTrials = 8; % num of test trials

%% Values
possibleRewards_te = 1:14;
possibleRewards_tr = [0, 0, 0, 1, 1, 2, 2, 8, 8, 9, 9, 10, 10, 10];
rewards_tr = zeros(nAgents, nWords);
rewards_te = zeros(nTrials, nWords);
for j = 1:nAgents
    rewards_tr(j, :) = possibleRewards_tr(randperm(nWords));
end
for j = 1:nTrials
    rewards_te(j, :) = possibleRewards_tr(randperm(nWords));
end
maxRe_tr = max(possibleRewards);
maxExposure_tr = max(possibleExposures);

%% Save

envInfo = {nWords, nTrials, rewards_te, maxRe_te, exposures_tr, maxExposure_tr, rewards_tr, maxRe_tr};
save('env/wg_v3.mat', 'envInfo');